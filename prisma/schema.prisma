generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}




//table cetegory 1
model Category {
  id String @id @default(uuid())
  name String @unique
  description String ?

  Medicines Medicines[]

  @@map("Categories")
 }

//table medicienes 2
model Medicines{
  id String @id @default(uuid())
  name String
  price Float
  stock Int @default(0)
  expiryDate DateTime @map("expiry_date")

  //foraign key
  categoryId String @map("categoryId")
  category Category @relation(fields: [categoryId],references: [id])


  // Better Auth  theke asche 
  sellerId    String   @map("seller_id")

  //relation ship 
  OrderItems OrderItems[]
  Reviews Reviews[]

  @@map("Medicines") 
}

//table orders 3
model Orders {
  id String @id @default(uuid())
  totalAmount Float @map("total_amount")
  status OrderStatus @default(PENDING)

  customerId String @map("customer_id") //better auth 

  

  orderItems  OrderItems[]
  createdAt   DateTime    @default(now()) @map("created_at")

  @@map("Orders")
}

//table orders items 4
model OrderItems{
  id         String    @id @default(uuid())

  orderId    String    @map("order_id")
  order      Orders    @relation(fields: [orderId], references: [id])

  medicineId String    @map("medicine_id")
  medicine   Medicines @relation(fields: [medicineId],references: [id])

  quantity   Int
  unitPrice  Float     @map("unit_price")


 @@map("OrderItems")
}

model Reviews{
  id String @id @default(uuid())
  rating Int @default(0)
  comment String?

  userId     String    @map("user_id")

  medicineId String    @map("medicine_id")
  medicine   Medicines @relation(fields: [medicineId], references: [id])

@@map("Reviews")
}




enum OrderStatus {
  PENDING
  CONFIRMED
  SHIPPED
  DELIVERED
  CANCELLED
}